{
    "cmake.configureSettings": {
        "BUILD_TESTING": true,
    },

    "workbench.colorCustomizations": 
    {
        "debugConsole.errorForeground": "#3d1b1b",
        "debugConsole.sourceForeground": "#e12020"
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "googletest.failed",
                "settings": {
                    "foreground": "#f00"
                }
            },
            {
                "scope": "googletest.passed",
                "settings": {
                    "foreground": "#0f0"
                }
            },
            {
                "scope": "googletest.run",
                "settings": {
                    "foreground": "#0f0"
                }
            }
        ]
    },
    "gtest-adapter.debugConfig": [
        "(lldb) Launch"
    ],
    "files.associations": {
        "bitset": "cpp",
        "forward_list": "cpp",
        "list": "cpp",
        "regex": "cpp",
        "ostream": "cpp",
        "__locale": "cpp",
        "iosfwd": "cpp"
    },
    
}
